{
  "name": "web-app-starter-pack",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A comprehensive React + TypeScript web application starter pack with modern tooling",
  "keywords": [
    "react",
    "typescript",
    "vite",
    "tailwindcss",
    "vitest",
    "starter-kit"
  ],
  "scripts": {
    "dev": "vite",
    "dev:api": "wrangler dev",
    "build": "tsc -b && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deploy": "npm run build && wrangler deploy",
    "deploy:staging": "npm run build && wrangler deploy --env staging",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.4.0",
    "@tanstack/react-query": "^5.0.0",
    "hono": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.1.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.0.0-alpha.37",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.4",
    "lint-staged": "^15.2.14",
    "msw": "^2.10.5",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^4.0.0-alpha.37",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-bundle-analyzer": "^0.22.0",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.0.0",
    "drizzle-kit": "^0.24.0",
    "drizzle-orm": "^0.33.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
